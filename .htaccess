RewriteEngine On

# Redirect extensions to clean URLs
RewriteCond %{THE_REQUEST} \s/+(.+?)\.(php|html?)\s [NC]
RewriteRule ^ %1 [R=301,L]

# Serve PHP files
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L]

# Serve HTML files
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L]
